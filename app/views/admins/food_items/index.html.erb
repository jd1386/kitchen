<h1>Admins:FoodItems</h1>

<div class="row">

	<div class="col-md-11">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @food_items.each do |food_item| %>
				<tr>
					<td><%= food_item.id %></td>
					<td><%= food_item.name %></td>
					<td><%= link_to 'Edit', edit_admins_food_item_path(food_item) %> <%= link_to 'Delete', '' %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
	<div><%= will_paginate @food_items %></div>
	</div>

<div class="col-md-1">
	<%= render 'admins/nav' %>
</div>

</div>