<h1>Admin:Comments</h1>

<div class="row">

	<div class="col-md-11">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Recipe</th>
					<th>User Name</th>
					<th>Content</th>
					<th>Created
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @comments.each do |comment| %>
				<tr>
					<td><%= comment.id %></td>
					<td><%= link_to comment.recipe.name, recipe_path(comment.recipe) %></td>
					<td><%= link_to full_name_of(comment.user), user_path(comment.user) %></td>
					<td><%= comment.content %></td>
					<td><%= comment.created_at %></td>
					<td><%= link_to 'Edit', '' %> <%= link_to 'Delete', '' %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
		<div><%= will_paginate @comments %></div>
	</div>

<div class="col-md-1">
	<%= render 'admins/nav' %>
</div>

</div>