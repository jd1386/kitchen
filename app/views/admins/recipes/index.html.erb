<h1>Admin:Recipes</h1>

<div class="row">

	<div class="col-md-11">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>User Created</th>
					<th>Comments Left</th>
					<th>Fav Added</th>
					<th>Created</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @recipes.each do |recipe| %>
				<tr>
					<td><%= recipe.id %></td>
					<td><%= link_to recipe.name, recipe_path(recipe) %></td>
					<td><%= link_to full_name_of(recipe.user), user_path(recipe.user) %></td>
					<td><%= recipe.comments.count %></td>
					<td><%= recipe.fans.count %></td>
					<td><%= recipe.created_at %></td>
					<td>
						<%= link_to 'Show', recipe_path(recipe) %>
						<%= link_to 'Edit', edit_admins_recipe_path(recipe) %>
						<%= link_to 'Delete', '' %>
					</td>
				</tr>
			</tbody>
			<% end %>
		</table>
	<div><%= will_paginate @recipes %></div>
	</div>

<div class="col-md-1">
	<%= render 'admins/nav' %>
</div>

</div>