<div class="row">
<div class="col-md-3">
  <div class="row">
    <h1><%= @recipe.name %></h1>
    <div>Created by <%= link_to full_name_of(@recipe.user), @recipe.user %></div>
  </div>
  <div class="row">
    <h5>Description</h5>
    <p><%= @recipe.description %></p>
  </div>
  <div class="row">
  <h5>Favs</h5>
    <div>Fav content will come here</div>
  </div>
  <div class="row">
  <h5>Tags</h5>
    <div>Tags will come here</div>
  </div>
</div>

<div class="col-md-5">
  Image will come here
</div>

<div class="col-md-4">
  <div class="row">
    <h4>Method</h4>
    <%= @recipe.method %>
  </div>

  <div class="row">
    <h4>Source</h4>
    <%= @recipe.source %>
  </div>

  <div class="row">  
    <h4>Serving</h4>
    <%= @recipe.serving %>
  </div>

  <% unless @recipe.ingredients.blank? %>
  <div class="row">  
    <h4>Ingredients</h4>
    <% @recipe.ingredients.each do |ingredient| %>
      <div><%= ingredient.food_item.name %>  <%= ingredient.volume %></div>
    <% end %>
  </div>
  <% end %>
</div>
</div>

<hr>

<div class="row">
  <div id="comments_count">
    <h4><%= pluralize(@comments.count, 'comment') %></h4>
  </div>

  <% unless @comments.blank? %>
  <div class="row">
    <div id="comments_list">
      <% @comments.each do |comment| %>
        <% unless comment.user.blank? %>
      <div class="media" id="comment-id-<%= comment.id %>">
        <a class="pull-left" href="#">
          <%= image_tag(gravatar_url(comment.user), width: 38, class: "img-circle") %>
        </a>
        <div class="media-body">
          <div class="media-heading">
            <strong><%= comment.user.first_name %></strong>
          </div> 
          <p>
            <%= comment.content %>
            
            <% if current_user == comment.user %>
            <span style="font-size:12px;">
              <%= link_to 'Delete', recipe_comment_path(@recipe, comment), method: :delete, remote: true %>  
            </span>
            <% end %>
          </p>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>

 <%= render 'comments/form' %>

<hr>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %> | 
<%= link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
