<p id="notice"><%= notice %></p>

<h1><%= @recipe.name %></h1>

<p>
  <strong>Method:</strong>
  <%= @recipe.method %>
</p>

<p>
  <strong>Source:</strong>
  <%= @recipe.source %>
</p>

<p>
  <strong>Tip:</strong>
  <%= @recipe.tip %>
</p>

<p>
  <strong>Serving:</strong>
  <%= @recipe.serving %>
</p>

<% unless @recipe.ingredients.blank? %>
  <p><strong>Ingredients</strong></p>

  <% @recipe.ingredients.each do |ingredient| %>
    <p><%= ingredient.food_item.name %> : <%= ingredient.volume %></p>
  <% end %>
<% end %>

  <hr>

  <h4><%= pluralize(@comments.count, 'comment') %></h4>
  <% unless @comments.blank? %>
    <% @comments.each do |comment| %>
    <div class="media">
      <a class="pull-left" href="#">
        <%= image_tag(gravatar_url(comment.user), width: 38, class: "img-circle") %>
      </a>
      <div class="media-body">
        <div class="media-heading">
          <strong><%= comment.user.first_name %></strong>
        </div> 
        <p>
          <%= comment.content %>
          
          <% if current_user == comment.user %>
          <span style="font-size:12px;">
            <%= link_to 'Delete', recipe_comment_path(@recipe, comment), method: :delete %>  
          </span>
          <% end %>
        </p>
      </div>
    </div>
    <% end %>
  <% end %>

 
  <!-- Form for New Comment -->
  <%= form_for @comment, url: recipe_comments_path(@recipe) do |f| %>
  <form class="form-horizontal" role="form">
    <div class="media">
      <a class="pull-left" href="#">
        <%= image_tag(gravatar_url(current_user), width: 38, class: "img-circle") %>
      </a>
      <div class="media-body">
        <div class="form-group">
          <div class="input-group">
            <%= f.text_field :content, size: 70 %>
            <%= f.submit value: 'Add Comment', class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </form>
  <% end %>


  <!-- End Form -->

<hr>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
